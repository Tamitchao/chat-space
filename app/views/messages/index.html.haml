.message
  %p.message--create-group
    グループを作成しました

.account
  .account__account-name
    account-name
  %ul.account__edit-list
    %li.account__edit-item
      = link_to "#", class: "account__edit-link" do
        = fa_icon 'edit'
    %li.account__edit-item
      = link_to "#", class: "account__edit-link" do
        = fa_icon 'cog'

.groups
  %ul.groups__group-list
    - 5.times do |i|
      = link_to "#", class: "groups__group-link" do
        %li.groups__group-item
          %p.groups__group-item-name
            group-name#{i}
          %p.groups__new-message
            new-message#{i}

.group
  .group__group-content
    %p.group__group-name
      group-name3
    = link_to "#", class: "group__edit-link" do
      Edit
  .group__member-content
    %ul.group__member-list
      Member：
      - 5.times do |i|
        %li.group__member-item
          member-#{i}

.messages
  %ul.messages__message-list
    - 3.times do |i|
      %li.messages__message-item
        .messages__sub-info
          .messages__user-name
            user-name#{i}
          .messages__post-date
            2019/09/05(Thu) 06:53:27
        .messages__main-info
          こんにちは！